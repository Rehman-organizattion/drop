						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/github/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "github", "login"]
						},
						"description": "Redirects to GitHub OAuth page"
					}
