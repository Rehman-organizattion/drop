					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/github/callback?code=xxx",
							"host": ["{{base_url}}"],
							"path": ["auth", "github", "callback"],
							"query": [
								{
									"key": "code",
									"value": "xxx",
